<%- include("header"); -%>

    <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <%# loop through the items list %>
        <% items.forEach((item)=>{ %>
          <div class="item">
            <input type="checkbox">
            <p><%= item %></p>
          </div>
        <% }) %>

        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <!-- When we make post to homw route, the value of button will indicate
          which route should be rendered-->
          <button type="submit" name="list" value= <%= listTitle %>>+</button>
        </form>
    </div>


<%- include("footer"); -%>
